    "version": "0.2.0",
    "configurations": [
        // For standalone script execution
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Train",
            "type": "debugpy",
            "request": "launch",
            "args" : ["--task", "Isaac-Drone-Racer-v0", "--num_envs", "4096", "--headless"],
            "program": "${workspaceFolder}/isaac_drone_racer/scripts/rl/train.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Play",
            "type": "debugpy",
            "request": "launch",
            "args" : ["--task", "Isaac-Drone-Racer-v0", "--num_envs", "32"],
            "program": "${workspaceFolder}/isaac_drone_racer/scripts/rl/play.py",
            "console": "integratedTerminal",
        },
    ]
}